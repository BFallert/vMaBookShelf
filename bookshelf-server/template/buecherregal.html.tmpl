                    }
                } else if (nGrenzeBerechnet <= 2) {
                    $("body").removeClass("fixed");
                    lFixed  = false;
                } else if (nGrenzeBerechnet <= 215) {
                } else if (nGrenzeBerechnet <= 215) {
