                        $("body").addClass("fixed");
                        lFixed  = true;
                        [%- IF fehlersuche %] console.log( '135' );[%- END # fehlersuche %]
                    }
                } else if (nGrenzeBerechnet > 2 && nGrenzeBerechnet < 216) {
                    $("body").addClass("fixed");
                    lFixed  = true;
                } else if (nGrenzeBerechnet > 215) {
                    [%- IF fehlersuche %] console.log( "!folded    nGrenzeBerechnet > 215");[%- END # fehlersuche %]
